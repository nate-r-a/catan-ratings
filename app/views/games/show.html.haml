.container
  .row
    - @game.gameplays.each do |gp|
      .col-md-4.col-sm-4.col-xs-6
        .player-score
          = image_tag "sheep.png", class: "player-avatar"
          //.player-name
          %span.player-name
            = gp.player.name
            = gp.score.round(0)
            %p
              #{gp.before.round(0)} 
              %i.fa.fa-arrow-right.arrow{data: {diff: (gp.after - gp.before)}}
              #{gp.after.round(0)}
                
                
